<div class="row">
<div class="col-md-6 col-md-offset-3">





<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "well"}) do |f| %>
	<h2>Sign In</h2>

  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %><br>
    <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
    <%= f.input :remember_me, as: :boolean, input_html: { class: 'form-control' } if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign In", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>

</div>